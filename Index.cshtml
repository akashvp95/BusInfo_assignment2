
@{
    ViewBag.Title = "Index";
}



<div class="jumbotron" align ="center">
    <form action="~/BusInfo/Save" method="post">
        <label for="html">Boarding Point</label>
        <select name="boardpoint">
            <option value="BGL">BGL</option>
            <option value="HYD">HYD</option>
            <option value="CHN">CHN</option>
            <option value="PUN">PUN</option>
            <option value="MUM">MUM</option>
        </select>
        <br />
        <label for="html">TravelDate</label>
        <input type="text" name="traveldate" placeholder="MM-DD-YYYY"/>
        <br />
        <label for="html">Amount</label>
        <input type="text" name="amount" />
        <br />
        <label for="html">Rating</label>
        <select name="rating">
            <option value="5">5</option>
            <option value="4">4</option>
            <option value="3">3</option>
            <option value="2">2</option>
            <option value="1">1</option>
        </select>
        <br />
        <input type="submit" value="Bus Data" />
    </form>
</div>